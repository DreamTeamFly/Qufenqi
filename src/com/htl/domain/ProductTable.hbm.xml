<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.htl.domain">
	
	<!-- 如果不存在该表，会自动创建一个CustomerTable表 -->
	<!-- class属性中name为类名，table为表名 -->
	<class  name="ProductTable" table="ProductTable">
		<!-- 主键策略 -->
		<id name="id" type="java.lang.Integer">
			<generator class="native"/>  
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="40" ></column>
		</property>
		<property name="price" type="java.lang.Double">
			<column name="price" />
		</property>
		<property name="type" type="java.lang.String">
			<column name="type"  length="20"/>
		</property>
		<property name="materia" type="java.lang.String">
			<column name="materia"  length="20"/>
		</property>
		<property name="suitable" type="java.lang.String">
			<column name="suitable"  length="20"/>
		</property>
		<property name="shop_id" type="java.lang.Integer">
			<column name="shop_id" ></column>
		</property>
		<property name="stock" type="java.lang.Integer">
			<column name="stock" />
		</property>
		<property name="imagePath1" type="java.lang.String">
			<column name="imagePath1" length="50"></column>
		</property>
		<property name="imagePath2" type="java.lang.String">
			<column name="imagePath2" length="50"></column>
		</property>
		<property name="imagePath3" type="java.lang.String">
			<column name="imagePath3" length="50"></column>
		</property>
		<property name="imagePath4" type="java.lang.String">
			<column name="imagePath4" length="50"></column>
		</property>
		<property name="imagePath5" type="java.lang.String">
			<column name="imagePath5" length="50"></column>
		</property>
		<property name="rank" type="java.lang.Integer">
			<column name="rank" />
		</property>
		<property name="state" type="java.lang.String">
			<column name="state" length="10"></column>
		</property>
		
	</class>
</hibernate-mapping>